{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src" ,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": true ,
    "outDir": "./build",
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true,
    "strict": true ,
    "noImplicitAny": true ,
    "skipLibCheck": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
