{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src" ,
    "paths": {
      "*": ["node_modules/*"],
      "@/applications/*": ["applications/*"],
      "@/infrastructure/*": ["infrastructure/*"],
      "@/shared/*": ["shared/*"],
    }, 
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "sourceMap": true ,

    "outDir": "./build",

    "esModuleInterop": true ,
                  
    "forceConsistentCasingInFileNames": true,

    "strict": true ,
    "noImplicitAny": true ,
                    
    "skipLibCheck": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
