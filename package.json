{
  "name": "surya-yudha-e-ticket-cinema-booking-backend",
  "version": "1.0.0",
  "main": "./build/index.js",
  "scripts": {
    "build:watch": "npx tsc -w",
    "dev": "npx nodemon",
    "build": "npx tsc",
    "prod": "node ./build/index.js",
    "prepare": "husky install",
    "format": "npx prettier . --write",
    "lint": "npx eslint ./src --ext .ts",
    "lint:fix": "npx eslint ./src --ext .ts --fix",
    "check-types": "npx tsc --noEmit --pretty",
    "check-format": "npx prettier . --check"
  },
  "keywords": [
    "cinema",
    "movies",
    "e-ticket",
    "booking-app",
    "backend"
  ],
  "author": "Dimas Mukhtar Yuliawan",
  "license": "ISC",
  "description": "Powers the backend of the Surya Yudha Cinema e-ticket booking application, enabling users to browse movies, select showtimes, choose seats, and purchase tickets online.",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.1.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}
