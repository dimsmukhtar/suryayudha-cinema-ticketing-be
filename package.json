{
  "name": "surya-yudha-e-ticket-cinema-booking-backend",
  "version": "1.0.0",
  "main": "./build/server/index.js",
  "scripts": {
    "build:watch": "tsc -w",
    "dev": "nodemon",
    "build": "tsc",
    "prod": "node ./build/server/index.js",
    "format": "prettier . --write",
    "check-types": "tsc --noEmit --pretty",
    "check-format": "prettier . --check",
    "prisma:generate": "prisma generate --schema=./src/infrastructure/database/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./src/infrastructure/database/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=./src/infrastructure/database/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./src/infrastructure/database/prisma/schema.prisma",
    "prisma:seed": "pnpm build && node ./build/infrastructure/database/seed.js"
  },
  "keywords": [
    "cinema",
    "movies",
    "e-ticket",
    "booking-app",
    "backend"
  ],
  "author": "Dimas Mukhtar Yuliawan",
  "license": "ISC",
  "description": "Backend of the Surya Yudha Cinema e-ticket booking application, enabling users to browse movies, select showtimes, choose seats, and purchase tickets online.",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@types/cors": "^2.8.17",
    "argon2": "^0.41.1",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "midtrans-client": "^1.4.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.4",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.4",
    "@types/passport-google-oauth20": "^2.0.17",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
