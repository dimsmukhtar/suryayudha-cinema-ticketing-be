{
  "name": "surya-yudha-e-ticket-cinema-booking-backend",
  "version": "1.0.0",
  "main": "./build/server/index.js",
    "scripts": {
    "build:watch": "npx tsc -w",
    "dev": "npx nodemon",
    "build": "npx tsc",
    "prod": "node ./build/server/index.js",
    "format": "npx prettier . --write",
    "check-types": "npx tsc --noEmit --pretty",
    "check-format": "npx prettier . --check",
    "prisma:generate": "npx prisma generate --schema=./src/infrastructure/database/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/infrastructure/database/prisma/schema.prisma",
    "prisma:migrate:deploy": "npx prisma migrate deploy --schema=./src/infrastructure/database/prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema=./src/infrastructure/database/prisma/schema.prisma",
    "prisma:seed": "npm run build && node ./build/infrastructure/database/seed.js"
  },
  "keywords": [
    "cinema",
    "movies",
    "e-ticket",
    "booking-app",
    "backend"
  ],
  "author": "Dimas Mukhtar Yuliawan",
  "license": "ISC",
  "description": "Backend of the Surya Yudha Cinema e-ticket booking application, enabling users to browse movies, select showtimes, choose seats, and purchase tickets online.",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@types/cors": "^2.8.17",
    "argon2": "^0.41.1",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
